div.modal-header
    h3.modal-title Create/Edit User

div.modal-body
    div.form-group
        label Username
        input.form-control(type='text', ng-model='user.username')
    div.form-group
        label Is Admin?
        input.form-control(type='checkbox', ng-model='user.isAdmin')
    div.form-group
        label Is Manager?
        input.form-control(type='checkbox', ng-model='user.isManager')

div.modal-footer
    button.btn.btn-lg.btn-danger(ng-click='delete()') Delete
    button.btn.btn-lg.btn-success(ng-click='save()') Save
    button.btn.btn-lg(ng-click='cancel()') Cancel