div.modal-header
    h3.modal-title Save Kanban Report

div.modal-body
    div.form-group
        label Name
        input.form-control(type='text', ng-model='report.name')
    div.form-group
        label Share with everyone else?
        input.form-control(type='checkbox', ng-model='report.isShared')
    div.form-group
        label User
        p {{report.username}}

    p.alert.alert-danger(ng-if='errorMessage') {{errorMessage}}

div.modal-footer
    button.btn.btn-lg.btn-success(ng-click='save()') Save
    button.btn.btn-lg(ng-click='cancel()') Cancel