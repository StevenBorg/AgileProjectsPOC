div.modal-header
    h3.modal-title Load Kanban Report

div.modal-body
    div.form-group
        label Shared Reports
        ul(ng-repeat='report in sharedReports')
            li
                a(ng-click='loadReport(report)') {{report.name}}
                | &nbsp; ({{report.username}})

    div.form-group(ng-if='myReports.length > 0')
        label My Reports
        ul(ng-repeat='report in myReports')
            li
                a.reportName(ng-click='loadReport(report)') {{report.name}}
                span(ng-if='report.isShared') &nbsp; (shared)
                | &nbsp;- (
                a(ng-click='deleteReport(report)') delete
                | )

    p.alert.alert-danger(ng-if='errorMessage') {{errorMessage}}

div.modal-footer
    button.btn.btn-lg(ng-click='cancel()') Cancel