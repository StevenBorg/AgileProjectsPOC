h1 Classes of Service

h2(ng-if='errorMessage') {{errorMessage}}

span(ng-if='!errorMessage')

    p
        button.btn.btn-lg(ng-click='createClassOfService()') Create New Class

    ul(ng-repeat='classOfService in classesOfService')
        li
            a(ng-click='edit(classOfService)') {{classOfService.name}}
